<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:MileageTrackerMobile.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MileageTrackerMobile.Modules.SettingsButton"
             x:DataType="viewModels:MainViewModel">
    <Border CornerRadius="40" 
                                Margin="15"
                                DockPanel.Dock="Bottom"
                                Background="{DynamicResource GreyGradientBrush}"
                                BorderBrush="{DynamicResource GreyBorderGradientBrush}"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Right"
                                BorderThickness="2.5"
                                ClipToBounds="True"
                                IsVisible="{Binding SettingsButtonVisible}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="40"
                                                  Color="#30000000" 
                                                  OffsetX="0" 
                                                  OffsetY="10"/>
                            </Border.Effect>
                            <Grid>
                                <Border CornerRadius="39"
                                                Margin="1"
                                                BorderBrush="{DynamicResource InnerGlowBrush}"
                                                BorderThickness="1"
                                                IsHitTestVisible="False"/>
                                <DockPanel Margin="15"
                                            VerticalAlignment="Stretch" 
                                            HorizontalAlignment="Stretch">
                                    
                                    <Button DockPanel.Dock="Bottom" CornerRadius="400" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" Click="OpenSettings_OnClick">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                                            <Label HorizontalAlignment="Center" FontSize="20" Margin="0">Settings</Label>
                                            <Label VerticalAlignment="Center" Classes="icon" Margin="0">&#xe270;</Label>
                                        </StackPanel>
                                    </Button>
                                    
                                </DockPanel>
                                <Border Background="{DynamicResource GlassReflectionBrush}"
                                        VerticalAlignment="Top"
                                        Opacity="0.6"
                                        IsHitTestVisible="False"/>
                            </Grid>
                        </Border>
</UserControl>
