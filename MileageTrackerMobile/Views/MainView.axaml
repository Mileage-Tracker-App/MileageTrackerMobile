<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MileageTrackerMobile.ViewModels"
             xmlns:modules="clr-namespace:MileageTrackerMobile.Modules"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="800"
             x:Class="MileageTrackerMobile.Views.MainView"
             x:DataType="vm:MainViewModel">
    
    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainViewModel />
    </Design.DataContext>
    
    <ScrollViewer VerticalAlignment="Stretch" 
                  Background="{DynamicResource PrimaryBackground}">
        <Border CornerRadius="40" 
                Margin="15" 
                Background="{DynamicResource GreyGradientBrush}"
                BorderBrush="{DynamicResource GreyBorderGradientBrush}"
                BorderThickness="2.5"
                ClipToBounds="True">
            <Border.Effect>
                <DropShadowEffect BlurRadius="40" 
                                  Color="#30000000" 
                                  OffsetX="0" 
                                  OffsetY="10"/>
            </Border.Effect>
            <Grid>
                <Border CornerRadius="39"
                       Margin="1"
                       BorderBrush="{DynamicResource InnerGlowBrush}"
                       BorderThickness="1"
                       IsHitTestVisible="False"/>
                <StackPanel Margin="15" 
                           Orientation="Vertical" 
                           VerticalAlignment="Stretch" 
                           HorizontalAlignment="Stretch">
                    <DockPanel HorizontalAlignment="Stretch" 
                              VerticalAlignment="Stretch">
                        
                        <!-- Header TextBlock -->
                        <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" 
                                   FontFamily="{DynamicResource AkkoProBold}" 
                                   FontSize="35">
                            Mileage Tracker
                        </TextBlock>
                        <Border DockPanel.Dock="Top" VerticalAlignment="Top" Margin="0 0 0 0" Background="#80F8F8F8" Height="2" HorizontalAlignment="Stretch"></Border>
                        
                        <!-- Modules -->
                        <modules:LoginScreen Background="Transparent" IsVisible="{Binding LoginScreenVisible}" DockPanel.Dock="Top" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></modules:LoginScreen>
                        
                        <modules:SettingsButton Background="Transparent" IsVisible="{Binding SettingsButtonVisible}" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center"></modules:SettingsButton>
                        
                        <modules:LogsList Background="Transparent" IsVisible="{Binding LogsPageVisible}" DockPanel.Dock="Top" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></modules:LogsList>

                        <modules:UserIdDisplay Background="Transparent" IsVisible="{Binding SessionIdDisplayVisible}" DockPanel.Dock="Top" HorizontalAlignment="Center" VerticalAlignment="Center"></modules:UserIdDisplay>
                        
                        <modules:SessionIDError Background="Transparent" IsVisible="{Binding SessionNotExistVisible}" DockPanel.Dock="Top" HorizontalAlignment="Center" VerticalAlignment="Center"></modules:SessionIDError>
                        
                    </DockPanel>
                </StackPanel>
                <Border Background="{DynamicResource GlassReflectionBrush}"
                       VerticalAlignment="Top"
                       Height="120"
                       Opacity="0.6"
                       IsHitTestVisible="False"/>
            </Grid>
        </Border>
    </ScrollViewer>
</UserControl>